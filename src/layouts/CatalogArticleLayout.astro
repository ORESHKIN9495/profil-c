---
import CrumbsComponent from "../components/CrumbsComponent.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <CrumbsComponent parent="Каталог" title={frontmatter.title} />

  <section>
    <!-- ... -->
    <h1>{frontmatter.title}</h1>
    <picture>
      <img src="/images/catalog/01.jpg" alt="" />
    </picture>

    <p>{frontmatter.description}</p>
    <ul>
      <li>A - высота</li>
      <li>B - ширина</li>
      <li>S - толщина стенки, мм</li>
    </ul>

    <a href="#" class="button">Сделать заказ</a>

    <form action="">
      <label>
        Типоразмер
        <select name="" id="">
          <option value="" selected disabled hidden>Выбрать</option>
          <option value="1">40x40</option>
          <option value="2">60x60</option>
        </select>
      </label>

      <label>
        Толщ. стенки
        <select name="" id="">
          <option value="" selected disabled hidden>Выбрать</option>
          <option value="1">40x40</option>
          <option value="2">60x60</option>
        </select>
      </label>

      <label>
        Вес 1 п/м
        <input type="text" value="1" />
      </label>
    </form>

    <slot />
    <!-- Markdown content is injected here -->
    <!-- ... -->
  </section>
</BaseLayout>

<style lang="scss">
  section {
    display: grid;
    gap: 20px;
    margin: auto;
    max-width: var(--t-max-width);
    padding: 100px 0;

    form {
      background-color: #f9f9f9;
      border-radius: 25px;
      display: grid;
      grid-template: auto / repeat(3, 1fr);
      padding: 40px;

      label {
        display: grid;
      }
    }
  }
</style>
