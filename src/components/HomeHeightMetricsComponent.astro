<style lang="scss">
  section {
    display: flex;
    flex-direction: column;
    gap: 80px;
    padding: 100px 0;

    h3 {
      margin: auto;
    }

    div {
      display: flex;
      flex-direction: column;
      gap: 80px;
      margin: auto;
      max-width: var(--t-max-width);
      width: 100%;

      nav {
        background: #f9f9f9;
        border-radius: 25px;
        box-shadow: 0 5px 5px rgba(20, 31, 51, 0.06);
        display: inherit;
        padding: 0 20px;
        place-content: space-between;

        svg {
          color: var(--c-theme);
          overflow: visible;
        }
      }

      table {
        border-spacing: 0;
        border-collapse: collapse;
        width: 100%;

        thead {
          background: #f9f9f9;
        }
        tbody tr:nth-child(2n) {
          background: #eee;
        }
        td {
          padding: 10px 20px;
          border: 2px solid white;
          vertical-align: middle;
        }
      }
    }
  }
</style>
